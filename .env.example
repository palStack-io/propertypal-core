# PropertyPal Core - Environment Configuration
# Copy to .env and customize as needed

# ===========================================
# QUICK START (just copy this file to .env)
# ===========================================

# Database
POSTGRES_USER=propertypal
POSTGRES_PASSWORD=propertypal
POSTGRES_DB=propertypal

# Security (change these in production!)
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-me-in-production

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Demo mode - auto-creates sample accounts on startup
# Set to true to enable demo accounts:
#   demo@propertypal.com / Demo123!
#   demo2@propertypal.com / Demo123!
#   demo3@propertypal.com / Demo123!
DEMO_MODE=false

# Skip email verification (recommended for self-hosted)
SKIP_EMAIL_VERIFICATION=true

# Email (optional - for password reset)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password

# Port (default: 80)
PORT=80
